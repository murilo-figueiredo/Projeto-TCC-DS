<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgFundo"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fundojogoapp" />

    <ImageView
        android:id="@+id/imgBarra"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imgFundo"
        app:layout_constraintTop_toBottomOf="@+id/imgFundo"
        app:srcCompat="@drawable/greenbar" />

    <ImageView
        android:id="@+id/imgIcone"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imgBarra"
        app:layout_constraintTop_toBottomOf="@+id/imgFundo"
        app:srcCompat="@drawable/icone" />

    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:text="zsdxfasdfdasgf"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgIcone"
        app:layout_constraintTop_toBottomOf="@+id/imgFundo" />
</androidx.constraintlayout.widget.ConstraintLayout>